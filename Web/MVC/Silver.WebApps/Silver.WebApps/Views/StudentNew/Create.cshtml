@model Student

<h1>Create Student</h1>

<div class="row">
    <form asp-controller="Student" asp-action="Create" method="post">
        <div class="form-group">
            <label class="control-label">Name</label>
            <input type="text" class="form-control" asp-for="Name"/>
            <span asp-validation-for="Name" style="font-size:smaller; color:red;"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Email</label>
            <input type="text" class="form-control" asp-for="Email"/>
            <span asp-validation-for="Email" style="font-size:smaller; color:red;"></span>

        </div>
        &nbsp;
        <div class="form-group">
           <input type="submit" class="btn btn-outline-primary" value="Create" />
        </div>
    </form>
</div>
