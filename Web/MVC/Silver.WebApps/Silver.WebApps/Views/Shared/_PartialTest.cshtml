
@for(int i=0;i<20;i++){
    
    <h1>
        @if(i%2==0){
            <span class="alert alert-success">Even</span>
            <div>
                &nbsp;
            </div>
        }
        else
        {
            <span class="alert alert-danger">Odd</span>
            <div>
                &nbsp;
            </div>
        }
    </h1>
}