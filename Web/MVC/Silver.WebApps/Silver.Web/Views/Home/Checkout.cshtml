@model IEnumerable<Silver.Web.ViewModels.SessionViewModel>

@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

<div class="row">
    <form>
        <input type="text" name="CustomerName" placeholder="Enter the name" />
        <input type="text" name="Address" placeholder="Enter the Address" />
       
        <input type="submit" class="btn btn-outline-info" value="Place order" />
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.FilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) Per @item.Unit
            </td>
           
            <td>
               <img src="@item.FilePath" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
         
        </tr>
}
<tr>
            <td colspan="4">
                <strong>Total</strong>
            </td>
            <td>
                @Model.Sum(x=>x.Total)
            </td>
</tr>

    </tbody>
</table>
<a href="" class="btn btn-outline-primary">Proceed to payment</a>